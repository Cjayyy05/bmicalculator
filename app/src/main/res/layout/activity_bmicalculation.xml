<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF9F6"
    tools:context=".bmicalculation">
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/ticklogo"
        android:layout_above="@+id/contentLayout"
        android:src="@drawable/ok"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true">

    </ImageView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:id="@+id/contentLayout"
        android:background="@drawable/btn2"
        android:layout_centerInParent="true">
        
        
        
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="100"
            android:id="@+id/bmitext"
            android:layout_centerHorizontal="true">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:layout_marginTop="10dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/bmitext"
            android:id="@+id/gendertext"
            android:textColor="@color/white">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your BMI Category is"
            android:id="@+id/bmicategory"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/gendertext"
            android:textSize="25dp"
            android:textStyle="bold">

        </TextView>
            



    </RelativeLayout>

    <android.widget.Button
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:id="@+id/recalculatebmi"
        android:layout_below="@+id/contentLayout"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Recalculate BMI"
        android:textStyle="bold"
        android:background="@drawable/btnbackground">


    </android.widget.Button>
    









</RelativeLayout>